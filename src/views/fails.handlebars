<h4 style="text-align: center; margin-top: 20px; margin-bottom: 30px;">Failed expectations</h4>

<div id="accordionExample" style="margin-left: auto; margin-right: auto; max-width: 1000px; margin-bottom: 20px;">
    {{#each fails.failedExpectations}}
        <div class="card">
            <div class="card-header alert-danger" id="headingThree">
                <h2 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#test{{@index}}" style=" text-align: left; word-break: break-all;">
                        {{this.message}}
                    </button>
                </h2>
            </div>
            <div id="test{{@index}}" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                <div class="card-body">
                    <pre>{{this.stack}}</pre>
                </div>
                <a href="/report-screen/{{../fails.screenId}}" target="_blank">
                    <img src="/report-screen/{{../fails.screenId}}" class="img-fluid" alt="Responsive image">
                </a>
            </div>
        </div>
    {{/each}}
</div>
