<link href="/css/launches.css" rel="stylesheet">
    <div class="modal fade" id="delete-launch" tabindex="-1" role="dialog" aria-labelledby="delete-launch-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="delete-launch-label">Delete launch</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Launch reports will be deleted
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary delete-launch-button" onclick="deleteLaunch(this.value);">Delete launch</button>
                </div>
            </div>
        </div>
    </div>

  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body" style="text-align: center">
            <br>
            <h6 class="modal-title" id="exampleModalLabel">Put this id in your reporter client config:</h6>
            <br>
          <p>{{launches.projectId}}</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

{{#unless launches.list}}
    <h4 style="text-align: center; margin-top: 20px; margin-bottom: 20px;">No tests launches</h4>
{{/unless}}

<main role="main">


  <div class="album py-5">
    <div class="container">

      <div class="row">

    {{#each launches.list}}
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder:"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">{{this.launchDateLocal}}</text></svg>
            <div class="card-body">
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <button type="button" value="{{this._id}}" class="btn btn-sm btn-outline-secondary" onclick="viewLaunch(this.value);">View</button>
                    <button type="button" value="{{this._id}}" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#delete-launch">Delete</button>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
    {{/each}}

      </div>
    </div>
  </div>
</main>


<script>
    $(document).on("click", '[data-target="#delete-launch"]', function () {
        $('.delete-launch-button').val(this.value)
    });

    function deleteLaunch(launchId){
        console.log(launchId);
        $('#delete-launch').on('hidden.bs.modal', function(e) {
            $('.delete-launch-button').val('');
            document.location.reload()
        });

        const xhr = new XMLHttpRequest();
        xhr.open("DELETE", `/launch/${launchId}`, true);
        xhr.onload = function (){
            if (xhr.status === 200){
                $('#delete-launch').modal('hide');
            } else {
                console.error(xhr.status);
                $('#delete-launch').modal('hide');
            }
        };
        xhr.onerror = xhr.onabort = function (){
            console.error('some error');
        };
        xhr.send();
    }

    let eventSource = new EventSource('/launches-update/{{launches.projectId}}');

    eventSource.onmessage = function(e) {
        document.location.reload()
    };

    function viewLaunch(launchId) {
        window.location.href = `/report/${launchId}`;
    }
</script>